{
  "name": "iac",
  "version": "0.1.0",
  "bin": {
    "iac": "src/bin/iac.ts"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:bootstrap": "cdk bootstrap --all",
    "cdk:synth": "cdk synth --all",
    "cdk:diff": "cdk diff --all",
    "cdk:deploy": "cdk deploy --all --outputs-file cfn_outputs.json",
    "cdk:destroy": "cdk destroy --all",
    "build_all": "npm run clean && npm run build && cdk deploy --outputs-file cfn_outputs.json"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.109.0",
    "@types/jest": "^26.0.10",
    "@types/node": "10.17.27",
    "jest": "^26.4.2",
    "ts-jest": "^26.2.0",
    "aws-cdk": "1.109.0",
    "ts-node": "^9.0.0",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "@aws-cdk/aws-ec2": "^1.110.1",
    "@aws-cdk/aws-ecs": "^1.110.1",
    "@aws-cdk/aws-iam": "^1.110.1",
    "@aws-cdk/aws-rds": "^1.110.1",
    "@aws-cdk/core": "1.109.0",
    "dotenv": "^10.0.0",
    "source-map-support": "^0.5.16"
  }
}
